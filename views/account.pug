extends base
block content
  div.sidenav-main
    .sidenav
      a.nav-account(href='#setting') 
        i.fa.fa-user-o
        span SETTING
      a.nav-account(href='#reviews') 
        i.fa.fa-star-o
        span REVIEWS
      a.nav-account(href='#billing') 
        i.fa.fa-credit-card
        span BILLING
      - if(user.role === "teacher" || user.role ==="admin")
        a.nav-account(href='#teacher') 
          i.fa.fa-edit
          span MANAGE COURSE
      - if(user.role === "admin")
        a.nav-account(href='#admin') 
          i.fa.fa-id-badge
          span ADMIN
    .sidenav-content
      img(src=`/img/user/${user.photo}`, alt=`${user.name}`, style='width: 70px; border-radius: 50%; margin-left: auto; margin-right: auto; display: block;')
      h3(style='text-align: center;')= `Welcome, ${user.name}`
      h5(style='text-align: center;')= user.email
      form.updateForm
        .form__group
          label.form__label(for='password') Current Password
          input#password-current.form__input(type='password', placeholder='********', required, minlength='8')
        .form__group
          label.form__label(for='password') New Password
          input#password-new.form__input(type='password', placeholder='********', required, minlength='8')
        .form__group
          label.form__label(for='password-confirm') Confirm password
          input#password-confirm.form__input(type='password', placeholder='********', required, minlength='8')
        .form__group
          button.btn.btn--update Update